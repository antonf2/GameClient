<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="HeaderButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style TargetType="Button" x:Key="CalcButtonGray">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Background" Value="#d1d1d1"/>
        <Setter Property="BorderBrush" Value="#b3b3b3" />
    </Style>

    <Style TargetType="Button" x:Key="CalcButtonBlue">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Background" Value="#2c6bd1"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#b3b3b3"/>
    </Style>

</ResourceDictionary>
